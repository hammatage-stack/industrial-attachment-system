# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/industrial-attachment

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# MPesa Configuration (Manual Till Number)
# M-Pesa Till Number: 3400188
# Users will manually send KES 500 to this till and submit transaction code for verification
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SHORTCODE=3400188
MPESA_PASSKEY=your_passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/applications/mpesa/callback
MPESA_API_URL=https://sandbox.safaricom.co.ke

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration
# Supported providers: Gmail, Zoho Mail, SendGrid, Mailgun (using SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=industrialattachementsystem@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=industrialattachementsystem@gmail.com
ADMIN_EMAIL=industrialattachementsystem@gmail.com

# Application Settings
APP_NAME=Industrial Attachment System (IAS)
APP_FEE=500

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Additional Configuration
FRONTEND_URL=http://localhost:3000
